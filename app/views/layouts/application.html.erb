<!DOCTYPE html>
<html>
  <head>
    <title>TesteNetshowme</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'main', media: 'all', 'data-turbolinks-track': 'reload' %>

    <link href="https://vjs.zencdn.net/7.10.2/video-js.css" rel="stylesheet" />

    <!-- If you'd like to support IE8 (for Video.js versions prior to v7) -->
    <!-- <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script> -->

  </head>

  <body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark d-flex">
      <%= link_to "MsFlix", root_path, class: "navbar-brand text-title" %>
      <div class="ml-auto">
        <% if user_signed_in? %>
          <button class="btn btn-outline-primary">
            <%= link_to "Meus VÃ­deos", videos_path, class: "text-white text-decoration-none" %>
          </button>
        <% end %>
        <button class="btn btn-primary">
          <% if !user_signed_in? %>
            <%= link_to "Entrar", user_session_path, class: "text-white text-decoration-none" %>
          <% else %>
            <%= link_to "Sair", destroy_user_session_path, class: "text-white text-decoration-none", :method => :delete %>
          <% end %>
        </button>
      </div>
    </nav>
    
    <%= yield %>

    <%= javascript_pack_tag 'application' %>
    <%= javascript_include_tag '/assets/main' %>

    <script src="https://vjs.zencdn.net/7.10.2/video.min.js"></script>

  </body>
</html>
