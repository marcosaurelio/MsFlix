<header>
  <div class="container d-flex justify-content-center">
    <h2 class="h1 mt-5 mb-3"><%= @video.name %></h2>
  </div>
</header>

<main>
  <div class="container d-flex justify-content-center">
    <div class="embed-responsive embed-responsive-16by9 mb-3 w-50">
      <video
        id="video-<%= @video.id %>"
        class="video-js vjs-default-skin embed-responsive-item"
        controls="controls"
        preload="metadata"
        width="640"
        height="264"
        poster="<%= @video.url %>"
        data-setup="{}"
        onplay="oViewCount()"
        onpause="onplay=''"
      >
        <source src="<%= @video.url %>" type="application/x-mpegURL" />
      </video>
    </div>
  </div>
  <div class="container d-flex justify-content-center">
    <p>350 Views</p>
  </div>

</main>



